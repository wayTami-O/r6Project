<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".screens.ShopFragment"
    android:background="@drawable/bg_shop">



    <TextView
        android:id="@+id/scoreText"
        style="@style/whiteText18"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="27dp"
        android:text="Score: "
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/rangText"
        style="@style/whiteText18"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="27dp"
        android:layout_marginEnd="71dp"
        android:text="Rang:"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imgRang"
        android:layout_width="41dp"
        android:layout_height="72dp"
        android:layout_marginTop="3dp"
        android:layout_marginEnd="23dp"
        android:src="@drawable/cooper5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:layout_constraintBottom_toBottomOf="@+id/imgRang"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@color/white" />

    <ImageView
        android:id="@+id/buttonOpres"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/bg_oper_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view"
        android:background="@drawable/border_button_shop"/>

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/whiteText18"
        android:text="Operative"
        app:layout_constraintBottom_toBottomOf="@+id/buttonOpres"
        app:layout_constraintEnd_toEndOf="@+id/buttonOpres"
        app:layout_constraintHorizontal_bias="0.472"
        app:layout_constraintStart_toStartOf="@+id/buttonOpres"
        app:layout_constraintTop_toTopOf="@+id/buttonOpres" />

    <ImageView
        android:id="@+id/buttonGuns"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="12dp"
        android:src="@drawable/active_bg_guns_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.977"
        app:layout_constraintStart_toEndOf="@+id/buttonOpres"
        app:layout_constraintTop_toBottomOf="@+id/imgRang" />

    <TextView
        android:id="@+id/textView2"
        style="@style/whiteText18"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Guns"
        app:layout_constraintBottom_toBottomOf="@+id/buttonGuns"
        app:layout_constraintEnd_toEndOf="@+id/buttonGuns"
        app:layout_constraintStart_toStartOf="@+id/buttonGuns"
        app:layout_constraintTop_toTopOf="@+id/buttonGuns" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rcvGun"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="28dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonGuns" />


</androidx.constraintlayout.widget.ConstraintLayout>